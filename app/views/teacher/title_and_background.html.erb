	<%= stylesheet_link_tag "brand_new_textedit" %>
<% end %>

<div class="title text-center"> New Project </div>

<div class="container-fluid bottom">

		<div class="center-block my-nav">
			<a href="/teacher/teacher_nav">
				<div class = "box navi">
					<img src="<%= asset_path( 'noun_45581_cc.png' ) %>" alt="NAV" style="width:60px;height:60px;">
				</div>
			</a>
			<a href="/teacher/teacher_not_implemented">
				<div class = "box qanda">
					<img src="<%= asset_path( 'noun_54982_cc.png' ) %>" alt="Q/A" style="width:60px;height:60px;">
				</div>
			</a>
			<a href="/teacher/landing">
				<div class = "box home">
					<img src="<%= asset_path( 'Home-50.png' ) %>" alt="HOME" style="width:60px;height:60px;">
				</div>
			</a>
			<a href="/teacher/teacher_not_implemented">
				<div class = "box settings">
					<img src="<%= asset_path( 'Settings-50.png' ) %>" alt="SETTINGS" style="width:60px;height:60px;">
				</div>
			</a>
			<a href="/teacher/teacher_not_implemented">
				<div class = "box alerts">
					<img src="<%= asset_path( 'noun_101400_cc.png' ) %>" alt="ALERTS" style="width:60px;height:60px;">
				</div>
			</a>
		</div>
</div>


<div class="container-fluid ">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<%= form_tag(controller: "teacher", action: "create_project", method: "post") do %>
				<div class="form-group">
					<%= label_tag(:title, "Enter title:") %>
					<%= text_field :title, nil, class: "form-control", id: "ProjectTitle" %>
				</div>

				<div class="form-group">
					<%= label_tag(:description, "Enter project description:") %>
				  	<%= text_area :description, nil, class:"form-control", id:"ProjectDescription" %>
				</div>

				<div class="form-group">
					<%= label_tag(:description, "Upload a picture for the project description:") %>
				</div>

				<div class = "form-group">
					<%= label_tag(:supply, "Enter supply:") %>
					<%= text_field :supply, nil, class: "form-control", id: "Supply" %>
				</div>



			<label for="Supplies">Enter Supplies:</label>
			<input type="text" class="form-control" id="Supplies" placeholder="Supply">

			
			<label for="Step">Enter First Step:</label>
			<textarea class="form-control" id="Step" rows="4" placeholder="Enter First Step"></textarea>
			<div class="form-group">
    			<!-- <label for="exampleInputFile">File input</label> -->
    			<input type="file" id="exampleInputFile">
    			<p class="help-block">Upload a picture to show on the first step of the project.</p>
  			</div>


  			<%= submit_tag("Create Project") %>

			<% end %>
		</div>
	</div>
</div>


</div>