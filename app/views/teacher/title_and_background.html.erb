			<input type="text" class="form-control" id="Supplies" placeholder="Supply">

			<div class="space"></div>

			<label for="Supplies">Enter Supplies:</label>
			<input type="text" class="form-control" id="Supplies" placeholder="Supply">

			<div class="space"></div>

			<!-- add steps -->
			<label for="ProjectTitle">Enter Title:</label>
			<input type="text" class="form-control" id="ProjectTitle" rows="1" placeholder="Enter First Step Title">
			<label for="Step">Enter First Step:</label>
			<textarea class="form-control" id="Step" rows="4" placeholder="Enter First Step"></textarea>
			<div class="form-group">
    			<!-- <label for="exampleInputFile">File input</label> -->
    			<input type="file" id="exampleInputFile">
    			<p class="help-block">Upload a picture to show on the first step of the project.</p>
  			</div>
