<% content_for :stylesheets do %>
	<%= stylesheet_link_tag "brand_new_textedit" %>
<% end %>

<div class="title text-center"> New Project </div>


<div class="container-fluid ">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<label for="ProjectTitle">Enter Title:</label>
			<input type="text" class="form-control" id="ProjectTitle" rows="1" placeholder="Enter Project Title">
	
			<label for="ProjectDescription">Enter Project Description:</label>
			<textarea class="form-control" id="ProjectDescription" rows="4" placeholder="Project Description"></textarea>
			<div class="form-group">
    			<!-- <label for="exampleInputFile">File input</label> -->
    			<input type="file" id="exampleInputFile">
    			<p class="help-block">Upload a picture to show on the project description.</p>
  			</div>

  			<a href="/teacher/project_created">
				<button type="submit" class="btn btn-primary">Create Project</button>
			</a>

			<a href="/teacher/project_created">
				<button type="submit" class="btn btn-primary">Save Changes and Continue</button>
			</a>

  		</div>
  	</div>
</div>