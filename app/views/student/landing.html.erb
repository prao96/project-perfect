<% content_for :stylesheets do %>
	<%= stylesheet_link_tag "student_landing_page" %>
<% end %>

<div class="conatiner-fluid top">
	<div class="bottom-background"></div>
	<div class="title text-center"> <%=@project.title %> </div>
</div>

	<div class="container-fluid bottom">

		<div class="bottom-background"> </div>

		<div class="center-block my-nav">
			<%= link_to controller: "student", id: @project.id, action: "nav" do %>
				<div class = "box navi">
					<img src="<%= asset_path( 'noun_45581_cc.png' ) %>" alt="NAV" style="width:60px;height:60px;">
				</div>
			<% end %>
			<a href="/student/not_implemented">
				<div class = "box qanda">
					<img src="<%= asset_path( 'noun_54982_cc.png' ) %>" alt="Q/A" style="width:60px;height:60px;">
				</div>
			</a>
			<%= link_to controller: "student", action: "home" do %>
				<div class = "box home">
					<img src="<%= asset_path( 'Home-50.png' ) %>" alt="HOME" style="width:60px;height:60px;">
				</div>
			<% end %>
			<%= link_to controller: "student", id: @project.id, action: "student_settings_project" do %>
				<div class = "box settings">
					<img src="<%= asset_path( 'Settings-50.png' ) %>" alt="SETTINGS" style="width:60px;height:60px;">
				</div>
			<% end %>
			<a href="/student/not_implemented">
				<div class = "box alerts">
					<img src="<%= asset_path( 'noun_101400_cc.png' ) %>" alt="ALERTS" style="width:60px;height:60px;">
				</div>
			</a>
	</div>

	<!--	<div class="title text-center"> Project Perfect </div> -->

	</div>

<div class="container-fluid" >
	<div class="row">
		<%= link_to controller: "student", action: "home" do %>
			<div class="col-xs-6 col-md-1 main left"><</div>
		<% end %>
		<%= link_to controller: "student", id: @project.id, action: "background" do %>
			<div class="col-xs-6 col-md-push-10 col-md-1 main right">></div>
		<% end %>

		<div class="col-xs-12 col-md-pull-1 col-md-5 main center1">
			<img src="http://www.bigfoto.com/miscellaneous/photos-16/salt-crystals-94jf.jpg" alt="Mountain View" style="width:304px;height:228px;">	
			<p></p>
			<p><!-- Have you ever wanted to learn how to make salt crystals on your own? Well here's your chance! --><%=@project.description %></p>
		 </div>
		<div class="col-xs-12 col-md-pull-1 col-md-5 main center1"> 
			<%= link_to controller: "student", id: @project.id, action: "background" do %>
				<div class="navigation">Background</div>
			<% end %>
			<%= link_to controller: "student", project_id: @project.id, action: "supplies" do %>
				<div class="navigation">Supplies</div>
			<% end %>
			<% @project.number_of_steps.times do |val| %>
				<%= link_to controller: "student", project_id: @project.id, action: "project_step", step_number: val+1 do %>
					<div class="navigation">Step <%= val+1 %></div>
				<% end %>
			<%  end %>
			<%= link_to controller: "student", id: @project.id, action: "review" do %>
				<div class="navigation">Review/Submit</div>
			<% end %>
		</div>
	</div>
</div>