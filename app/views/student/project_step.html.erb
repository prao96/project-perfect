<% content_for :stylesheets do %>
	<%= stylesheet_link_tag "student_step_page" %>
<% end %>

<div class="title text-center"> Step <%= @step.first.step_number %> </div>

<div class="container-fluid" >
	<div class="row">

		<% puts @number_of_steps.first.number_of_steps %>

		<% if @step.first.step_number == 1 %>
			<%= link_to controller: "student", project_id: @step.first.project_id, action: "supplies" do %>
				<div class="col-xs-6 col-md-1 main left"><</div>
			<% end %>
		<% else %>
			<%= link_to controller: "student", project_id: @step.first.project_id, action: "project_step", step_number: @step.first.step_number - 1 do %>
				<div class="col-xs-6 col-md-1 main left"><</div>
			<% end %>
		<% end %>
		<!-- <a href="/student/supplies">
			<div class="col-xs-6 col-md-1 main left"><</div>
		</a> -->

		<% if @step.first.step_number == @number_of_steps.first.number_of_steps %>
			<%= link_to controller: "student", id: @step.first.project_id, action: "review" do %>
				<div class="col-xs-6 col-md-push-10 col-md-1 main right">></div>
			<% end %>
		<% else %>
			<%= link_to controller: "student", project_id: @step.first.project_id, action: "project_step", step_number: @step.first.step_number + 1 do %>
				<div class="col-xs-6 col-md-push-10 col-md-1 main right">></div>
			<% end %>
		<% end %>

		<div class="col-xs-12 col-md-pull-1 col-md-5 main center1"> 

			<%= @step.first.step %>

		</div>
		<div class="col-xs-12 col-md-pull-1 col-md-5 main center1"> 
			<img src="<%= asset_path( 'salt_step.png' ) %>" alt="NaCl" style="width:333px;height:226px;">	
		</div>
	</div>
</div>